<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="nl.inholland.myvitality">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".VitalityApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".ui.splash.SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:theme="@style/AppTheme.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.notification.NotificationActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.challenge.participants.ChallengeParticipantsActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.tutorial.TutorialActivity"
            android:exported="true"/>

        <activity
            android:name=".ui.scoreboard.ScoreboardActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.profile.overview.ProfileActivity"
            android:theme="@style/AppTheme"
            android:exported="true" />
        <activity
            android:name=".ui.profile.edit.ProfileEditActivity"
            android:theme="@style/AppTheme"
            android:exported="true" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="true" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.challenge.ChallengeActivity"
            android:exported="true" />
        <activity
            android:name=".ui.timelinepost.view.TimelinePostActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.timeline.liked.TimelineLikedActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.timelinepost.create.CreateTimelinePostActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.authentication.login.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.authentication.recover.AccountRecoverActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.authentication.register.main.RegisterActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.authentication.register.details1.RegisterDetailsActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.authentication.register.details2.RegisterAdditionalDetailsActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <service
            android:name=".ui.push_notifications.PushService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>