<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <TextView
        android:id="@+id/tutorial_skip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_skip"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="@dimen/margin_small"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/tutorial_viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_enormous"
        app:layout_constraintTop_toBottomOf="@id/tutorial_skip"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right"
        app:layout_constraintBottom_toTopOf="@+id/tutorial_continue_button"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tutorial_continue_button"
        style="@style/ButtonSecondary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button_secondary"
        android:text="@string/tutorial_continue"
        app:layout_constraintBottom_toTopOf="@+id/tutorial_bottom_items_barrier"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@id/guideline_left" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tutorial_login_button"
        style="@style/ButtonSecondary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button_secondary"
        android:text="@string/tutorial_button_signup"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tutorial_bottom_items_barrier"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@id/guideline_left" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/tutorial_bottom_items_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="tutorial_page_indicator, tutorial_login" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tutorial_page_indicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

