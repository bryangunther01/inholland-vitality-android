<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Buttons -->
    <style name="ButtonDefault" parent="android:style/Widget.Button">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/avenir_lt_pro_black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">@dimen/button_elevation</item>
        <item name="android:paddingStart">@dimen/button_padding</item>
        <item name="android:paddingEnd">@dimen/button_padding</item>
        <item name="android:paddingTop">@dimen/button_padding</item>
        <item name="android:paddingBottom">@dimen/button_padding</item>
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="ButtonPrimary" parent="ButtonDefault">
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="ButtonSecondary" parent="ButtonDefault">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="ButtonDelete" parent="ButtonDefault">
        <item name="android:background">@drawable/button_delete</item>
    </style>

    <style name="ButtonCancel" parent="ButtonDefault">
        <item name="android:background">@drawable/button_cancel</item>
    </style>

    <style name="ButtonPrimaryMini" parent="ButtonPrimary">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ButtonSecondaryMini" parent="ButtonSecondary">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedCornersBottom">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
    </style>


    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:fontFamily">@font/avenir_lt_pro_roman</item>
        <item name="android:paddingStart">@dimen/edit_text_padding_width</item>
        <item name="android:paddingEnd">@dimen/edit_text_padding_width</item>
        <item name="android:paddingTop">@dimen/edit_text_padding_height</item>
        <item name="android:paddingBottom">@dimen/edit_text_padding_height</item>
        <item name="android:drawablePadding">@dimen/edit_text_drawable_padding</item>
        <item name="android:elevation">0dp</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="SmallEditText" parent="EditText">
        <item name="android:paddingTop">@dimen/margin_tiny</item>
        <item name="android:paddingBottom">@dimen/margin_tiny</item>
    </style>

</resources>